@model IEnumerable<EligereES.Models.DB.Election>

@{
    ViewData["Title"] = "Elections";
}

<style>
    .smallerfont {
        font-size: 0.8em;
    }
</style>

<h1>Gestione delle elezioni</h1>

<p>
    <a asp-action="Create">Nuova elezione</a>
</p>

<h3>Elezioni future</h3>

<table class="table">
    <thead>
        <tr>
            <th>
                Descrizione
            </th>
            <th>
                Date
            </th>
            <th>
                Chiusura liste
            </th>
            <th>
                Commissioni
            </th>
            <th>
                Elettorato attivo
            </th>
            <th>
                Elettorato passivo
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Where(e => e.PollEndDate > DateTime.Today).OrderBy(e => e.PollStartDate).ThenBy(e => e.Name))
        {

            <tr>
                <td>
                    <h6>@Html.DisplayFor(modelItem => item.Name)</h6>
                    <p>@Html.DisplayFor(modelItem => item.Description)</p>
                </td>
                <td>
                    <dl class="smallerfont">
                        <dt>Inizio</dt><dd>@Html.DisplayFor(modelItem => item.PollStartDate)</dd>
                        <dt>Fine</dt><dd>@Html.DisplayFor(modelItem => item.PollEndDate)</dd>
                    </dl>                    
                </td>
                <td>
                    <span class="smallerfont">@(item.ElectorateListClosingDate?.ToString("dd/MM/yyyy") ?? "")</span>
                </td>
                <td>
                    <a asp-action="EditPollingStations" asp-route-id="@item.Id">
                        @Html.DisplayFor(modelItem => item.PollingStationCommission.Count)
                    </a>
                </td>
                <td>
                    <a asp-action="Voters" asp-route-id="@item.Id">
                        @Html.DisplayFor(modelItem => item.Voter.Count) <!-- This can be improved for performance -->
                    </a>
                </td>
                <td>
                    <a asp-action="Candidates" asp-route-id="@item.Id">
                        @Html.DisplayFor(modelItem => item.BallotName.Count) <!-- This can be improved for performance -->
                    </a>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Elezioni passate</h3>

<table class="table">
    <thead>
        <tr>
            <th>
                Descrizione
            </th>
            <th>
                Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Where(e => e.PollEndDate <= DateTime.Today).OrderByDescending(e => e.PollStartDate).ThenBy(e => e.Name))
        {

            <tr>
                <td>
                    <h6>@Html.DisplayFor(modelItem => item.Name)</h6>
                    <p>@Html.DisplayFor(modelItem => item.Description)</p>
                </td>
                <td>
                    <dl class="smallerfont">
                        <dt>Inizio</dt>
                        <dd>@Html.DisplayFor(modelItem => item.PollStartDate)</dd>
                        <dt>Fine</dt>
                        <dd>@Html.DisplayFor(modelItem => item.PollEndDate)</dd>
                    </dl>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
