@model EligereES.Models.DB.Election

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Election</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Configuration" class="control-label"></label>
                @Model.Configuration
            </div>
            <div class="form-group">
                <label asp-for="PollStartDate" class="control-label"></label>
                <input asp-for="PollStartDate" class="form-control" />
                <span asp-validation-for="PollStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PollEndDate" class="control-label"></label>
                <input asp-for="PollEndDate" class="form-control" />
                <span asp-validation-for="PollEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ElectorateListClosingDate" class="control-label"></label>
                <input asp-for="ElectorateListClosingDate" class="form-control" />
                <span asp-validation-for="ElectorateListClosingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ElectionTypeFk" class="control-label"></label>
                @ViewBag.ElectionType.Name
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
