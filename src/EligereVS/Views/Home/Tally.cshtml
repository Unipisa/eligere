@model (Dictionary<string, Dictionary<string, int>>, Dictionary<string, ElectionDescription>)

@{ 
    ViewData["Title"] = "Risultato elezione";
    var (countings, electioninfo) = Model;
}

<div class="text-center">
    <h1 class="display-4">Risultato spoglio elettorale</h1>
</div>
@foreach (var elid in countings.Keys)
{
    <div class="offset-3 col-5">
    <h3>@electioninfo[elid].ElectionName</h3>
    <ul class="list-group">
        @foreach (var n in countings[elid].Keys)
        {
        <li class="list-group-item d-flex justify-content-between align-items-center">
            @(n == "$spoil$" ? "Scheda nulla" : (n == "$blank$" ? "Scheda bianca" : n))
            <span class="badge badge-primary badge-pill">@countings[elid][n]</span>
        </li>
        }
        </ul>
    </div>
}
